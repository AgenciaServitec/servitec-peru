{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "paths": {
      "@servitec-peru/types": ["../../packages/types/src/index.ts"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}