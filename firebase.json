{
  "firestore": {
    "database": "(default)",
    "location": "southamerica-east1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "functions": [
    {
      "source": "apps/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "pnpm -C \"$RESOURCE_DIR\" run build"
      ]
    }
  ],

  "hosting": [
    {
      "target": "app",
      "public": "apps/hosting-admin/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "predeploy": [
        "pnpm --dir apps/hosting-admin run build"
      ],
      "headers": [
        {
          "source": "/index.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        },
        {
          "source": "/static/**/*.@(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2628000"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },

    {
      "target": "api",
      "public": "apps/hosting-api",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    }
  ],

  "storage": {
    "rules": "storage.rules"
  }
}
