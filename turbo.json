{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "lint:check": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "prettier:check": {
      "outputs": []
    },
    "prettier:format": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "lib/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}